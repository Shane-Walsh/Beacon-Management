<div class="content" ng-controller="addProdController as list" id="newProduct">
    <h4>{{message}}</h4>
    <form ng-submit="addProduct()" style="width: 900px" id="productForm">
        <div class="form-group" align="center">
            <input id="brandInput" type="string" class="form-control" placeholder="Brand"  maxlength="50" ng-model="formData.brand" required></input>
            <input id="typeInput" type="string" class="form-control" placeholder="Type" maxlength="50" ng-model="formData.type" required></input>
            <input id="descInput" type="string" class="form-control" placeholder="Description" maxlength="200" ng-model="formData.description" required></input>
            <input id="priceInput" type="number" class="form-control" placeholder="Price" maxlength="10" ng-model="formData.price" required></input>
            <input id="designationInput" type="string" class="form-control" placeholder="Designation" maxlength="20" ng-model="formData.designation" required></input>
            <!--<label class="label"><input  class="label__checkbox form-control" ng-model="formData.active" type="checkbox" />
                <span class="label__text">
                 <span class="label__check"><i class="fa fa-check icon"></i></span>
                </span>
            </label>-->
        </div>
        <button type="submit" class="btn btn-primary" id="submit">Submit</button>
    </form>
</div>